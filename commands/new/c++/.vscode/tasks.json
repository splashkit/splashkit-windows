{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "c:\\msys64\\msys2_shell.cmd",
    "isShellCommand": true,
    "args": [ "-mingw64", "-where", "${workspaceRoot}", "-lc", "\"skm clang++ -g program.cpp -o ${workspaceRootFolderName}; echo 'press enter to continue...'; read -s\""],
    "showOutput": "always",
    "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
    }
}